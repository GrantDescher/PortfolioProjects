@model List<Technician>
@{
	ViewBag.Title = "Technician Manager";
}

<h1>@ViewBag.Title</h1>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var technician in Model)
		{
			<tr>
				<td>@technician.Name</td>
				<td>@technician.Email</td>
				<td>@technician.Phone</td>
				<td class="text-center">
					<a asp-action="Edit" asp-controller="Technician" asp-route-id="@technician.TechnicianID" asp-route-slug="@technician.Slug" class="btn btn-primary">Edit</a>
				</td class="text-center">
				<td>
					<a asp-action="Delete" asp-controller="Technician" asp-route-id="@technician.TechnicianID" asp-route-slug="@technician.Slug" class="btn btn-primary">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<a asp-action="Add" asp-controller="Technician" class="btn btn-primary mb-3">Add Technician</a>