@model Product

@{
	string title = ViewBag.Action + "Product";
	ViewBag.Title = title;
}

@section scripts {
	<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h1>@ViewBag.Title</h1>

<div class="col-md-6 col-lg-4">
	<form asp-action="Edit" method="post">
		<div asp-validation-summary="All" class="text-danger"></div>

		<div class="form-group">
			<label asp-for="ProductCode">Code</label>
			<input asp-for="ProductCode" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="Name">Name</label>
			<input asp-for="Name" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="YearlyPrice">Yearly Price</label>
			<input asp-for="YearlyPrice" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="ReleaseDate">Release Date</label>
			<input type="text" asp-for="ReleaseDate" class="form-control" />
		</div>

		<input type="hidden" asp-for="ProductID" />

		<button type="submit" class="btn btn-primary">Save</button>
		<a asp-contoller="Product" asp-action="List" class="btn btn-primary">Cancel</a>
	</form>
</div>
