@model IncidentsViewModel

@{
	ViewBag.Title = "Incident Manager";
}

<h1>@ViewBag.Title</h1>

<div>
	<ul class="nav nav-pills">
		<li class="nav-item">
			<a asp-controller="Incident" asp-action="List" asp-route-id="all" class="nav-link 
				@(Model.IncidentFilter == "all" ? "active" : "")">All Incidents</a>
		</li>
		<li class="nav-item">
			<a asp-controller="Incident" asp-action="List" asp-route-id="unassigned" class="nav-link
				@(Model.IncidentFilter == "unassigned" ? "active" : "")">Unassigned Incidents</a>
		</li>
		<li class="nav-item">
			<a asp-controller="Incident" asp-action="List" asp-route-id="open" class="nav-link
				@(Model.IncidentFilter == "open" ? "active" : "")">Open Incidents</a>
		</li>
	</ul>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>Customer</th>
			<th>Product</th>
			<th>Date Opened</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var incident in Model.Incidents)
		{
			<tr>
				<td>@incident.Title</td>
				<td>@incident.Customer.FullName</td>
				<td>@incident.Product.Name</td>
				<td>@incident.DateOpened.ToShortDateString()</td>
				<td class="text-center">
					<a asp-action="Edit" asp-controller="Incident" asp-route-id="@incident.IncidentID" class="btn btn-primary">Edit</a>
				</td>
				<td class="text-center">
					<a asp-action="Delete" asp-controller="Incident" asp-route-id="@incident.IncidentID" class="btn btn-primary">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<a asp-action="Add" asp-controller="Incident" class="btn btn-primary mb-3">Add Incident</a>