@model IncidentAddEditViewModel

@{
	string title = ViewBag.Action + "Incident";
	ViewBag.Title = title;
}

@section scripts {
	<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h1>@ViewBag.Title</h1>

<form asp-action="Save" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group">
		<label asp-for="@Model.Incident.CustomerID">Customer</label>
		<select asp-for="@Model.Incident.CustomerID" class="form-control"
				asp-items="@(new SelectList(Model.Customers,
			"CustomerID", "FullName"))">
		<option value="">Select a Customer</option>
		</select>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Incident.ProductID">Product</label>
		<select asp-for="@Model.Incident.ProductID" class="form-control"
				asp-items="@(new SelectList(Model.Products,
			"ProductID", "Name"))" >
		<option value="">Select a Product</option>
		</select>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Incident.Title">Title</label>
		<input asp-for="@Model.Incident.Title" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.Incident.Description">Description</label>
		<textarea asp-for="@Model.Incident.Description" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.Incident.TechnicianID">Technician</label>
		<select asp-for="@Model.Incident.TechnicianID" class="form-control"
				asp-items="@(new SelectList(Model.Technicians,
			"TechnicianID", "Name"))">
			<option value="">Assign a Technician</option>
		</select>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Incident.DateOpened">Date Opened</label>
		<input type="text" asp-for="@Model.Incident.DateOpened" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.Incident.DateClosed">Date Closed</label>
		<input type="text" asp-for="@Model.Incident.DateClosed" class="form-control" />
	</div>

	<input type="hidden" asp-for="@Model.Incident.IncidentID" />

	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-action="List" class="btn btn-primary">Cancel</a>
</form>